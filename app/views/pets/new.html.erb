<h1>Create a New Pet</h1>
<%= link_to "See All Pets", "/pets" %>
<%= form_tag("/shelters/#{@shelter_id}/pets", method: :post) do %>
<%= label_tag :image %>
<%= text_field_tag :image %>
<%= label_tag :name %>
<%= text_field_tag :name %>
<%= label_tag :description %>
<%= text_field_tag :description %>
<%= label_tag :approximate_age %>
<%= text_field_tag :approximate_age %>
<%= label_tag :sex %>
<%= text_field_tag :sex %>
<%= submit_tag 'Create Pet' %>
<% end %>
